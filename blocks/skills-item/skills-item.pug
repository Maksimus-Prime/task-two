mixin skills-item(title,value)
    section.skills-item
        h4.skills-item__title=title
        ul.skills-item__rating
            -for (var x = 0; x < value; x++) {
                li.skills-item__mark.skills-item__mark_active
            -}
            -for (var x = value; x < 12; x++) {
                li.skills-item__mark
            -}